<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concurso de Tartas"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cake"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:textSize="20dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:textSize="20dp"
                />

        </RadioGroup>

        <CheckBox
            android:id="@+id/otherContest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Has participado en otros concurso de tartas?"
            android:textSize="20dp"
            android:textColor="@android:color/tab_indicator_text"
            android:layout_marginVertical="5dp"
            />

        <TextView
            android:id="@+id/whichContestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué concurso?"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/whichContestEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inscribirse"
            android:textSize="20dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="checkInscription"
            />

    </LinearLayout>

</ScrollView>